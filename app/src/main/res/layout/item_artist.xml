<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/imgArtist"
        android:layout_width="@dimen/width_artist"
        android:layout_height="@dimen/height_img_artist" />

    <RelativeLayout
        android:layout_width="@dimen/width_artist"
        android:layout_height="@dimen/height_frame"
        android:layout_below="@+id/imgArtist">

        <ImageButton
            android:id="@+id/optionAlbum"
            android:layout_width="@dimen/width_btn"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/option" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/optionAlbum"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin"
                android:textSize="@dimen/txt_artist"/>

<!--
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="10dp"/>
-->

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
