<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="@dimen/frame"
        android:layout_height="@dimen/frame">
    <ImageView
        android:id="@+id/imgAlbum"
        android:layout_width="@dimen/img_album"
        android:layout_height="@dimen/frame"
        android:layout_margin="@dimen/margin"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/optionSong"
        android:layout_width="@dimen/btn_album"
        android:layout_height="@dimen/frame"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/option" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame"
        android:layout_toLeftOf="@id/optionSong"
        android:layout_toRightOf="@id/frame"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="@dimen/txt_album"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNameArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="@dimen/txt_album"
            android:maxLines="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/frame"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@color/colorView" />

</RelativeLayout>
